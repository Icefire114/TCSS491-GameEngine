{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "allowImportingTsExtensions": false,
    "sourceMap": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}